{
  "manifest_version": 2,
  "name": "YouTube Time Loop",
  "version": "0.2",
  "background": {
    "page": "background/background.html"
  },
  "page_action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content_script.js"]
    }
  ],
  "permissions": [
    "declarativeContent",
    "alarms",
    "storage"
  ],
  "web_accessible_resources": [
    "popup/popup.js",
    "content/content_src.js",
    "content/content_main.js",
    "util/logger.js",
    "util/video.js",
    "util/time.js"
  ]
}